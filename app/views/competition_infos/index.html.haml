%h2= t '.title'
%h4= t '.search_conditions'
= search_form_for(@q, url:search_path) do |f|
  %h4= f.label :"#{t '.competition_day'}"
  = f.date_field :day_gteq, class:"date-picker"
  = f.date_field :day_lteq, class:"date-picker"
  %h4= f.label :competition_name_cont, "#{t '.competition_name'}"
  = f.search_field :name_cont, class: "form-control input-lg form-size-result"
  %h4= f.label :competition_place_cont, "#{t '.competition_place'}"
  = f.search_field :place_cont, class: "form-control input-lg form-size-result"
  = f.submit "#{t '.search'}", class: "btn btn-primary btn-lg"

/= render 'form', competition_infos: @Competition_Infos
%table.common-table
  %tr
    %th= t '.competition_day'
    %th= t '.competition_name'
    %th= t '.competition_place'
    %th= t '.competition_site'
  - @Competition_Infos.each do |competitioninfo|
    %tr
      %td= competitioninfo.day
      %td= competitioninfo.name
      %td= competitioninfo.place
      %td= competitioninfo.site

= link_to "初期画面へ戻る", competition_infos_path
