!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title マラソン2.0
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag "//www.google.com/jsapi", "chartkick"
    = csrf_meta_tags
    %link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css", :rel => "stylesheet"}/
  %body
    %header
      %nav.navbar.navbar-default
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => "#navbarEexample", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "ホーム", root_path, class: "navbar-brand"
          = link_to "マイページ", root_path, class: "navbar-brand"
          = link_to "練習の記録", new_practice_path, class: "navbar-brand"
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "dropdown"}
                紹介コーナー
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li= link_to "Long Distanceについて"
                %li= link_to "管理人について"
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "dropdown"}
                大会コーナー
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li= link_to "大会取得", root_path
                %li= link_to "大会検索", root_path
                %li= link_to "どこ走った？？", root_path
                %li= link_to "ランキング"
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              - if user_signed_in?
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "dropdown"}
                  ようこそ#{current_user.name}さん
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li= link_to "アカウント編集", edit_user_registration_path
                  %li= link_to "ログアウト", destroy_user_session_path, method: :delete
              - else
                = link_to "ログイン", new_user_session_path, class: "background"
    = yield
