%div{id: "follow_#{user.id}"}
  - unless current_user.follow?(user)
    = form_for(current_user.follow_run_friends.build(followed_id: user.id),remote:true) do |f|
      = f.hidden_field :followed_id
      = f.submit "フォロー", class: "btn btn-primary"
  - else
    = form_for(current_user.follow_run_friends.find_by(followed_id: user.id), html:{method: :delete}, remote: true) do |f|
      = f.submit "フォロー解除", class: "btn btn-success"
