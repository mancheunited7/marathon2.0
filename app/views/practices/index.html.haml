- model_class = Practice
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:day)
      %th= model_class.human_attribute_name(:distance)
      %th= model_class.human_attribute_name(:hour)
      %th= model_class.human_attribute_name(:minute)
      %th= model_class.human_attribute_name(:second)
      %th= model_class.human_attribute_name(:content)
      %th= model_class.human_attribute_name(:weight)
      %th= model_class.human_attribute_name(:heart_rate)
      %th= model_class.human_attribute_name(:avatar)
      %th= model_class.human_attribute_name(:avatar_cache)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @practices.each do |practice|
      %tr
        %td= link_to practice.id, practice_path(practice)
        %td= practice.day
        %td= practice.distance
        %td= practice.hour
        %td= practice.minute
        %td= practice.second
        %td= practice.content
        %td= practice.weight
        %td= practice.heart_rate
        %td= practice.avatar
        %td= practice.avatar_cache
        %td=l practice.created_at
        %td
          = link_to t('.show', :default => t("helpers.links.show")), practice_path(practice), :class => 'btn btn-default btn-xs'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_practice_path(practice), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), practice_path(practice), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_practice_path, :class => 'btn btn-primary'
