.form-wrapper
  %h2= t '.title'
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-item
      = f.email_field :email, autofocus: true, placeholder: "メールアドレス"
    .form-item
      = f.text_field :name, placeholder: "ユーザー名"
    .form-item
      = f.label :password
      - if @minimum_password_length
        %em
        (#{@minimum_password_length}文字以上)
      = f.password_field :password, autocomplete: "off", placeholder: "パスワード"
    .form-item
      = f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワード確認"
    .button-panel
      = f.submit "#{t '.title'}", class: "button"
  .form-footer
    = render "devise/shared/links"
